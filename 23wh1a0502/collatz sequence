#include <stdio.h>
void collatzSequence(int n) {
    printf("Collatz Sequence for %d: ", n);

    while (num != 1) {
        printf("%d ", num);

        if (num % 2 == 0) {
            num = num / 2;
            printf("%d\n",num);
        } 
        else {
            num = 3 * num + 1;
            printf("%d\n",num);
        }
    printf("\n"); 
    }

}

int main() {
    int num;
    printf("Enter the number: ");
    scanf("%d", &num);
    collatzSequence(num);

    return 0;
}

